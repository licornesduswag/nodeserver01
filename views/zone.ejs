<% include header.ejs %>

<h1>Gestion des zones</h1>

<a href="/ajout_zone" class="btn btn-default">Ajouter une zone</a>

<h2>Carte des zones</h2>

<!-- Set height and width with CSS -->
<div id="googleMap" style="height:700px;width:100%;"></div>

<!-- Add Google Maps -->
<script src="http://maps.googleapis.com/maps/api/js"></script>

<script>

var myCenter = new google.maps.LatLng(centerLat, centerLng);

function initialize() {
	var myCenter = new google.maps.LatLng(<%= liste[0].lat %>, <%= liste[0].longi %>);

	var mapProp = {
	center: myCenter,
	zoom:8,
	scrollwheel:true,
	draggable:true,
	mapTypeId:google.maps.MapTypeId.ROADMAP
	};

	var map = new google.maps.Map(document.getElementById("googleMap"),mapProp);

	<% for(var i=0; i<liste.length; i++) { %>
		var marker<%=i%> = new google.maps.Marker({
			position:{lat: <%= liste[i].lat %>, lng: <%= liste[i].longi %>},
			label: "<%= i %>",
			title: "<%= liste[i].nom %>"
		});

		marker<%=i%>.setMap(map);

		var myCenter<%=i%> = new google.maps.LatLng(<%= liste[i].lat %>, <%= liste[i].longi %>);
		var myCity<%=i%> = new google.maps.Circle({
			center: myCenter<%=i%>,
			radius: <%= liste[i].radius %>,
			<% if (liste[i].type == "radioactif") { %>
				fillColor:'#00FF00',
			<% } else { %>
				strokeColor:'#FF0000',
			<% } %>
			strokeOpacity:0.8,
			strokeWeight:2,
			<% if (liste[i].type == "radioactif") { %>
				fillColor:'#00FF00',
			<% } else { %>
				fillColor:'#FF00FF',
			<% } %>
			fillOpacity:0.35,
			map: map
		});

		myCity<%=i%>.setMap(map);
	<% } %>
}
google.maps.event.addDomListener(window, 'load', initialize);

</script>


